<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Sales::sales" title="sales">
                    <resource id="BoostMyShop_Rma::operations" title="RMA operations">
                        <resource id="BoostMyShop_Rma::rma" title="Prepare Orders" />
                        <resource id="BoostMyShop_Rma::configuration" title="Configuration" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores" title="store">
                    <resource id="Magento_Backend::stores_settings" title="store setting">
                        <resource id="Magento_Config::config" title="config">
                            <resource id="BoostMyShop_Rma::config" title="RMA section" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>

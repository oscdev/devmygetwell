<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product_tabs">
            <block class="BoostMyShop\AdvancedStock\Block\Product\Edit\Tab" name="product.advancedstock">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Inventory Management</argument>
                    <argument name="url" xsi:type="url" path="advancedstock/product/tab"><param name="_current">1</param></argument>
                    <argument name="class" xsi:type="string">ajax</argument>
                    <argument name="group_code" xsi:type="string">basic</argument>
                </arguments>
            </block>
            <action method="addTab">
                <argument name="name" xsi:type="string">product-advancedstock</argument>
                <argument name="block" xsi:type="string">product.advancedstock</argument>
            </action>
        </referenceBlock>
    </body>
</page>

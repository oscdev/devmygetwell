<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <orderpreparation>
            <steps>
                <picking>1</picking>
                <packing>1</packing>
                <download>1</download>
            </steps>
            <picking>
                <pdf_layout>large</pdf_layout>
                <display_options>1</display_options>
            </picking>
            <packing>
                <create_shipment>1</create_shipment>
                <create_invoice>1</create_invoice>
                <download_invoice>1</download_invoice>
                <download_shipping_label>1</download_shipping_label>
            </packing>
            <download>
                <invoice>1</invoice>
                <shipment>1</shipment>
            </download>
            <order_editor>
                <enabled>0</enabled>
            </order_editor>
        </orderpreparation>
    </default>
</config>
